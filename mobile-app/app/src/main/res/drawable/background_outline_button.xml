<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Disabled State -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#FFF5F5"/> <!-- Light red background for disabled state -->
            <stroke android:width="2dp" android:color="#FCA5A5"/> <!-- Faint red outline -->
            <corners android:radius="20dp"/>
        </shape>
    </item>

    <!-- Default State with Ripple -->
    <item>
        <ripple android:color="#FFF1F1"> <!-- Lighter ripple effect -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#FFFFFF"/> <!-- White background -->
                    <stroke android:width="2dp" android:color="#FF0000"/> <!-- Red outline -->
                    <corners android:radius="20dp"/>
                </shape>
            </item>
        </ripple>
    </item>

</selector>